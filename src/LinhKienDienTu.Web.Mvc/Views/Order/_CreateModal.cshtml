@using LinhKienDienTu.Web.Models.Common.Modals
@model LinhKienDienTu.Web.Models.Orders.CreateOrderModalViewModel

@{
    Layout = null;
}

<div class="modal fade" id="OrderCreateModal" tabindex="-1" role="dialog" aria-labelledby="OrderCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Create")+" "+L("Order")))
            <form name="OrderCreateForm" role="form" class="form-horizontal">

                @*Begin Header*@
                <div class="card-header border-bottom-0 pb-0 px-3">
                    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalActionsBar.cshtml")
                </div>
                @*End Header*@
                <div class="card-body overflow-auto py-2">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#OrderCreateTab">Đơn hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#OrderDetailCreateTab">Chi tiết đơn hàng</a>
                        </li>
                    </ul>
                </div>
                @*End body*@

                <!-- Tab panes -->
                <div class="tab-content modal-body">
                    <div id="OrderCreateTab" class="container tab-pane active">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                           for="MaDuAn">@L("Order.Name")</label>
                                    <div class="col-sm-8 input-group-sm">
                                        <input asp-for="Name" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                           for="TenDuAn">@L("Order.Phone")</label>
                                    <div class="col-sm-8 input-group-sm">
                                        <input asp-for="Phone" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                           for="Address">@L("Order.Address")</label>
                                    <div class="col-sm-8 input-group-sm">
                                        <input asp-for="Address" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                           for="TotalPrice">@L("Order.TotalPrice")</label>
                                    <div class="col-sm-8 input-group-sm">
                                        <input asp-for="TotalPrice" class="form-control" required disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group row mb-0 required">
                                    <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                           for="Note">@L("Order.Note")</label>
                                    <div class="col-sm-10 input-group-sm">
                                        <textarea asp-for="Note" rows=5 class="form-control" aria-describedby="inputGroup-sizing-sm"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="OrderDetailCreateTab" class="container tab-pane">
                        <div class="row">
                            <div class="col-sm-12">
                                <a href="javascript:;" data-toggle="modal" data-target="#AddOrderDetailModal" class="btn bg-blue float-sm-right">
                                    <i class="fa fa-plus-square"></i>
                                    @L("Create") @L("OrderDetail")
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="OrderDetailCreateTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("OrderDetail.Product")</th>
                                        <th>@L("OrderDetail.Quantity")</th>
                                        <th>@L("OrderDetail.Price")</th>
                                        <th>@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>