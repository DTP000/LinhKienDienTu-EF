@using LinhKienDienTu.Web.Models.Common.Modals
@model LinhKienDienTu.Web.Models.Orders.EditOrderModalViewModel

@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("View")+" "+L("Order")))
<form name="OrderViewForm" role="form" class="form-horizontal">
    <input type="hidden" asp-for="Id" />
     <div class="card-body overflow-auto py-2">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#OrderViewTab">Đơn hàng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#OrderDetailViewTab">Thông tin chi tiết</a>
            </li>
        </ul>
    </div>
    @*End body*@

    <!-- Tab panes -->
    <div class="tab-content modal-body">
        <div id="OrderViewTab" class="container tab-pane active">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                for="MaDuAn">@L("Order.Name")</label>
                        <div class="col-sm-8 input-group-sm">
                            <input asp-for="Name" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                for="TenDuAn">@L("Order.Phone")</label>
                        <div class="col-sm-8 input-group-sm">
                            <input asp-for="Phone" class="form-control" required>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                for="Address">@L("Order.Address")</label>
                        <div class="col-sm-8 input-group-sm">
                            <input asp-for="Address" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                for="TotalPrice">@L("Order.TotalPrice")</label>
                        <div class="col-sm-8 input-group-sm">
                            <input asp-for="TotalPrice" class="form-control" required disabled>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                                for="Note">@L("Order.Note")</label>
                        <div class="col-sm-10 input-group-sm">
                            <textarea asp-for="Note" rows=5 class="form-control" aria-describedby="inputGroup-sizing-sm"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="OrderDetailViewTab" class="container tab-pane">
            <div class="table-responsive">
                <table id="OrderDetailViewTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>@L("OrderDetail.Product")</th>
                            <th>@L("OrderDetail.Quantity")</th>
                            <th>@L("OrderDetail.Price")</th>
                            <th>@L("OrderDetail.Note")</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>

<script>
    var viewOrderDetail = @Html.Raw(Json.Serialize(@Model.OrderDetails));
</script>
<script src="~/view-resources/Views/Order/_ViewModal.js" asp-append-version="true"></script>

