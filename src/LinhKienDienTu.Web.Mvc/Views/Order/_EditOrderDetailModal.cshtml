@using LinhKienDienTu.Web.Models.Common.Modals
@model LinhKienDienTu.Web.Models.Orders.OrderDetailViewModel
@{
    Layout = null;
}

<div class="modal fade" id="EditOrderDetailModal" tabindex="-1" role="dialog" aria-labelledby="EditOrderDetailModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeaderItem.cshtml", new ModalHeaderViewModel(L("OrderDetail")))

            <form name="EditOrderDetailForm" role="form" class="form-horizontal">
                <input type="hidden" asp-for="Id" />
                <div class="modal-body">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label">@L("OrderDetail.Product")</label>
                        <div class="col-sm-10 input-group-sm">
                            <select asp-for="ProductId" asp-items="@ViewBag.ProductItems" class="form-control" required>
                                <option selected value="">--Tất cả--</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label">@L("OrderDetail.Quantity")</label>
                        <div class="col-sm-10 input-group-sm">
                            <input asp-for="Quantity" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label">@L("OrderDetail.Price")</label>
                        <div class="col-sm-10 input-group-sm">
                            <input asp-for="Price" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label">@L("OrderDetail.Note")</label>
                        <div class="col-sm-10 input-group-sm">
                            <textarea asp-for="Note" rows=3 class="form-control" aria-describedby="inputGroup-sizing-sm"></textarea>
                        </div>
                    </div>
                </div>

                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>