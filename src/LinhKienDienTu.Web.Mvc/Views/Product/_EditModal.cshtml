@using LinhKienDienTu.Web.Models.Products
@using LinhKienDienTu.Web.Models.Common.Modals
@model EditProductModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProduct")))
<form name="ProductEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" asp-for="CreationTime" />
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="CategoryName">@L("CategoryName")</label>
            <div class="col-md-9">
                <select asp-for="CategoryId" asp-items="@ViewBag.CategoryItems" class="form-control">
                    <option selected value="">--Tất cả--</option>
                </select>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="productname">@L("ProductName")</label>
            <div class="col-md-9">
                <input asp-for="Name" class="form-control" required maxlength="32" minlength="2">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="productprice">@L("ProductPrice")</label>
            <div class="col-md-9">
                <input asp-for="Price" class="form-control input-amount text-right" required>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="productquantity">@L("ProductQuantity")</label>
            <div class="col-md-9">
                <input asp-for="Quantity" class="form-control text-right" required>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="producturlimage">@L("ProductUrlImage")</label>
            <div class="col-md-9">
                <input asp-for="UrlImage" type="file" class="form-control avatarImageFile" required>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="productdescr">@L("ProductDescr")</label>
            <div class="col-md-9">
                <textarea asp-for="Descr" class="form-control" rows="3" required aria-label="Small" aria-describedby="inputGroup-sizing-sm"></textarea>
            </div>
        </div>
        <div class="form-group row required">
            <input id="avatarImageInput" type="text" class="form-control" name="avatarImageInput" hidden>
        </div>
        <img alt="" id="img" src="" alt="your image" width="360px">

    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Product/_EditModal.js" asp-append-version="true"></script>
